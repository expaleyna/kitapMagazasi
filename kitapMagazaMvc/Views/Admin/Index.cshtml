@model kitapMagazaMvc.Models.AdminDashboardDto

@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold text-primary">
                    <i class="fas fa-tachometer-alt me-2"></i>Admin Paneli
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Admin Paneli</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-3">
                                <i class="fas fa-users text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Toplam Kullanıcı</h6>
                            <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 p-3 rounded-3">
                                <i class="fas fa-kitap text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Toplam Kitap</h6>
                            <h3 class="fw-bold mb-0">@Model.Totalkitaps</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 p-3 rounded-3">
                                <i class="fas fa-shopping-cart text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Toplam Sipariş</h6>
                            <h3 class="fw-bold mb-0">@Model.TotalOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-3">
                                <i class="fas fa-lira-sign text-warning fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Toplam Gelir</h6>
                            <h3 class="fw-bold mb-0">₺@Model.TotalRevenue.ToString("N2")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Hızlı Erişim -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>Hızlı Erişim
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("kitaps")" class="btn btn-outline-primary">
                            <i class="fas fa-kitap me-2"></i>Kitap Yönetimi
                        </a>
                        <a href="@Url.Action("Categories")" class="btn btn-outline-success">
                            <i class="fas fa-layer-group me-2"></i>Kategori Yönetimi
                        </a>
                        <a href="@Url.Action("Users")" class="btn btn-outline-info">
                            <i class="fas fa-users me-2"></i>Kullanıcı Yönetimi
                        </a>
                        <a href="@Url.Action("Orders")" class="btn btn-outline-warning">
                            <i class="fas fa-shopping-cart me-2"></i>Sipariş Yönetimi
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Son Siparişler -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0">
                            <i class="fas fa-clock text-primary me-2"></i>Son Siparişler
                        </h5>
                        <a href="@Url.Action("Orders")" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sipariş #</th>
                                        <th>Müşteri</th>
                                        <th>Tutar</th>
                                        <th>Durum</th>
                                        <th>Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>#@order.Id</td>
                                            <td>@order.UserName</td>
                                            <td>₺@order.TotalAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-@(order.Status == "Completed" ? "success" : order.Status == "Pending" ? "warning" : "secondary")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox text-muted fs-1 mb-3"></i>
                            <p class="text-muted">Henüz sipariş bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Düşük Stoklu Kitaplar -->
    @if (Model.LowStockkitaps.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent border-0">
                        <h5 class="fw-bold mb-0 text-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>Düşük Stoklu Kitaplar
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Kitap ID</th>
                                        <th>Kitap Adı</th>
                                        <th>Stok</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kitap in Model.LowStockkitaps)
                                    {
                                        <tr>
                                            <td>#@kitap.Id</td>
                                            <td>@kitap.Title</td>
                                            <td>
                                                <span class="badge bg-danger">@kitap.Stock</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("kitaps")" class="btn btn-sm btn-outline-primary">
                                                    Stok Güncelle
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@model List<kitapMagazaMvc.Models.AdminOrderDto>

@{
    ViewData["Title"] = "Sipariş Yönetimi";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold text-primary">
                    <i class="fas fa-shopping-cart me-2"></i>Sipariş Yönetimi
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Admin Panel</a></li>
                        <li class="breadcrumb-item active">Sipariş Yönetimi</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Siparişler Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Sipariş #</th>
                                        <th>Müşteri</th>
                                        <th>Toplam Tutar</th>
                                        <th>Durum</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>
                                                <button class="btn btn-link p-0 text-decoration-none" 
                                                        onclick="showOrderDetails(@order.Id, '@order.UserName', '@order.OrderDate.ToString("dd.MM.yyyy HH:mm")', '@order.ShippingAddress', '@Html.Raw(string.Join(", ", order.OrderItems.Select(oi => oi.kitapTitle + " (x" + oi.Quantity + ")")))')">
                                                    #@order.Id
                                                </button>
                                            </td>
                                            <td>@order.UserName</td>
                                            <td>₺@order.TotalAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-@(order.Status == "Completed" ? "success" : order.Status == "Pending" ? "warning" : order.Status == "Shipped" ? "info" : "secondary")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-primary" 
                                                        onclick="changeOrderStatus(@order.Id, '@order.Status')">
                                                    <i class="fas fa-edit"></i> Durum Değiştir
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart text-muted fs-1 mb-3"></i>
                            <p class="text-muted">Henüz sipariş bulunmuyor.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sipariş Detayları Modal -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sipariş Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Sipariş No:</strong> <span id="detail_orderId"></span>
                    </div>
                    <div class="col-md-6">
                        <strong>Sipariş Tarihi:</strong> <span id="detail_orderDate"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Müşteri:</strong> <span id="detail_userName"></span>
                    </div>
                    <div class="col-md-6">
                        <strong>Teslimat Adresi:</strong> <span id="detail_shippingAddress"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Sipariş Edilen Kitaplar:</strong>
                    <p id="detail_orderItems" class="mt-2"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Sipariş Durumu Değiştirme Modal -->
<div class="modal fade" id="changeStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sipariş Durumu Değiştir</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" id="changeStatusForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Sipariş No: <strong id="status_orderId"></strong></p>
                    <p>Mevcut Durum: <strong id="status_currentStatus"></strong></p>
                    <div class="mb-3">
                        <label class="form-label">Yeni Durum</label>
                        <select class="form-select" name="status" id="newStatus">
                            <option value="Pending">Beklemede</option>
                            <option value="Processing">İşleniyor</option>
                            <option value="Shipped">Kargoya Verildi</option>
                            <option value="Delivered">Teslim Edildi</option>
                            <option value="Completed">Tamamlandı</option>
                            <option value="Cancelled">İptal Edildi</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Durumu Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showOrderDetails(orderId, userName, orderDate, shippingAddress, orderItems) {
    document.getElementById('detail_orderId').textContent = '#' + orderId;
    document.getElementById('detail_userName').textContent = userName;
    document.getElementById('detail_orderDate').textContent = orderDate;
    document.getElementById('detail_shippingAddress').textContent = shippingAddress || 'Belirtilmemiş';
    document.getElementById('detail_orderItems').textContent = orderItems;
    
    new bootstrap.Modal(document.getElementById('orderDetailsModal')).show();
}

function changeOrderStatus(orderId, currentStatus) {
    document.getElementById('status_orderId').textContent = '#' + orderId;
    document.getElementById('status_currentStatus').textContent = currentStatus;
    document.getElementById('newStatus').value = currentStatus;
    
    document.getElementById('changeStatusForm').action = '@Url.Action("UpdateOrderStatus")/' + orderId;
    
    new bootstrap.Modal(document.getElementById('changeStatusModal')).show();
}
</script>

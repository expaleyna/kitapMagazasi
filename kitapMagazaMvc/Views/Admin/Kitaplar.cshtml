@model List<kitapMagazaMvc.Models.KitapDto>

@{
    ViewData["Title"] = "Kitap Yönetimi";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold text-primary">
                    <i class="fas fa-book me-2"></i>Kitap Yönetimi
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Admin Panel</a></li>
                        <li class="breadcrumb-item active">Kitap Yönetimi</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Yeni Kitap Ekle Butonu -->
    <div class="row mb-4">
        <div class="col-12">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addKitapModal">
                <i class="fas fa-plus me-2"></i>Yeni Kitap Ekle
            </button>
        </div>
    </div>

    <!-- Kitaplar Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Resim</th>
                                        <th>Başlık</th>
                                        <th>Yazar</th>
                                        <th>Kategori</th>
                                        <th>Fiyat</th>
                                        <th>Stok</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kitap in Model)
                                    {
                                        <tr>
                                            <td>@kitap.Id</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(kitap.ImageUrl))
                                                {
                                                    <img src="@kitap.ImageUrl" alt="@kitap.Title" class="img-thumbnail" style="width: 50px; height: 50px;">
                                                }
                                                else
                                                {
                                                    <img src="~/images/no-image.jpg" alt="Resim Yok" class="img-thumbnail" style="width: 50px; height: 50px;">
                                                }
                                            </td>
                                            <td>@kitap.Title</td>
                                            <td>@kitap.Author</td>
                                            <td>@kitap.CategoryName</td>
                                            <td>@kitap.Price.ToString("C")</td>
                                            <td>@kitap.Stock</td>
                                            <td>
                                                <button class="btn btn-sm btn-warning me-1" onclick="editKitap(@kitap.Id)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" onclick="deleteKitap(@kitap.Id)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Henüz kitap bulunmuyor.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@{
    Layout = "_Layout";
}

@model List<kitapMagazaMvc.Models.CategoryDto>

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h2>
                <i class="fas fa-list me-2"></i>Kategoriler
            </h2>
            <p class="text-muted">Kitap kategorilerimizi inceleyin ve istediğiniz türdeki kitapları kolayca bulun.</p>
        </div>
    </div>
    
    <div class="row g-4">
        @foreach (var category in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card category-card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-kitapmark fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">@category.Name</h5>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="text-muted">@category.Description</p>
                        }
                                                            <span class="badge bg-primary rounded-pill">@category.KitapCount kitap</span>
                        <a href="@Url.Action("Details", "Categories", new { id = category.Id })" 
                           class="btn btn-primary">
                            <i class="fas fa-eye me-2"></i>Kitapları Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

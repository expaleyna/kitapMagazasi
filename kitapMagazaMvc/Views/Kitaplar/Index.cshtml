@{
    Layout = "_Layout";
    ViewData["Title"] = "Kitaplar";
}

@model List<kitapMagazaMvc.Models.KitapDto>

<div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Anasayfa</a></li>
            <li class="breadcrumb-item active">Kitaplar</li>
        </ol>
    </nav>

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="filter-section p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-filter me-3 fs-4 icon-primary"></i>
                    <h5 class="mb-0 fw-bold">Filtreler ve Arama</h5>
                </div>
                <form method="get" class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <label for="categoryId" class="form-label">
                            <i class="fas fa-layer-group me-1"></i>Kategori
                        </label>
                        <select class="form-select" id="categoryId" name="categoryId">
                            <option value="">Tüm Kategoriler</option>
                            @foreach (var category in (List<kitapMagazaMvc.Models.CategoryDto>)ViewBag.Categories)
                            {
                                <option value="@category.Id" selected="@(ViewBag.SelectedCategory != null && ViewBag.SelectedCategory.ToString() == category.Id.ToString())">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <label for="minPrice" class="form-label">
                            <i class="fas fa-tag me-1"></i>Min Fiyat
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input type="number" class="form-control" id="minPrice" name="minPrice" 
                                   value="@ViewBag.MinPrice" step="0.01" min="0" placeholder="0">
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <label for="maxPrice" class="form-label">
                            <i class="fas fa-tag me-1"></i>Max Fiyat
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input type="number" class="form-control" id="maxPrice" name="maxPrice" 
                                   value="@ViewBag.MaxPrice" step="0.01" min="0" placeholder="1000">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <label for="search" class="form-label">
                            <i class="fas fa-search me-1"></i>Arama
                        </label>
                        <input type="text" class="form-control" id="search" name="search" 
                               value="@ViewBag.Search" placeholder="Kitap adı, yazar, ISBN...">
                    </div>
                    <div class="col-lg-2 col-md-6 d-flex align-items-end">
                        <div class="d-grid w-100">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Ara
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <div class="d-flex align-items-center mb-3 mb-md-0">
                    <div class="bg-gradient-primary rounded-circle p-2 me-3">
                        <i class="fas fa-kitap text-white"></i>
                    </div>
                    <div>
                        <h2 class="mb-0 fw-bold">Kitap Koleksiyonu</h2>
                        <p class="text-muted mb-0">@Model.Count kitap bulundu</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-sort me-1"></i>Sırala
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategory, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, search = ViewBag.Search, sortBy = "price", sortOrder = "asc" })">Fiyat (Düşük-Yüksek)</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategory, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, search = ViewBag.Search, sortBy = "price", sortOrder = "desc" })">Fiyat (Yüksek-Düşük)</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategory, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, search = ViewBag.Search, sortBy = "title", sortOrder = "asc" })">İsim (A-Z)</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategory, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, search = ViewBag.Search, sortBy = "title", sortOrder = "desc" })">İsim (Z-A)</a></li>
                        </ul>
                    </div>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="view" id="grid-view" checked>
                        <label class="btn btn-outline-secondary" for="grid-view">
                            <i class="fas fa-th"></i>
                        </label>
                        <input type="radio" class="btn-check" name="view" id="list-view">
                        <label class="btn btn-outline-secondary" for="list-view">
                            <i class="fas fa-list"></i>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4" id="kitaps-container">
            @foreach (var kitap in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="card kitap-card h-100">
                        <div class="position-relative overflow-hidden">
                            <img src="@(kitap.ImageUrl ?? "/images/no-image.jpg")" 
                                 class="card-img-top" 
                                 alt="@kitap.Title"
                                 onerror="this.src='/images/no-image.jpg'">
                            <div class="position-absolute top-0 end-0 p-2">
                                @if(kitap.Stock <= 5 && kitap.Stock > 0)
                                {
                                    <span class="badge bg-warning text-dark">Son @kitap.Stock</span>
                                }
                                else if(kitap.Stock == 0)
                                {
                                    <span class="badge bg-danger">Tükendi</span>
                                }
                            </div>
                            @if(kitap.Price < 50)
                            {
                                <div class="position-absolute top-0 start-0 p-2">
                                    <span class="badge bg-success">
                                        <i class="fas fa-fire me-1"></i>Fırsat
                                    </span>
                                </div>
                            }
                        </div>
                        <div class="card-body d-flex flex-column p-3">
                            <div class="mb-2">
                                <span class="badge badge-primary mb-2">@kitap.CategoryName</span>
                            </div>
                            <h6 class="card-title fw-bold mb-2 text-truncate" title="@kitap.Title">@kitap.Title</h6>
                            <p class="text-muted small mb-2">
                                <i class="fas fa-user me-1"></i>@kitap.Author
                            </p>
                            <p class="text-muted small flex-grow-1 kitap-description">
                                @(kitap.Description?.Length > 80 ? kitap.Description.Substring(0, 80) + "..." : kitap.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <span class="h5 text-primary mb-0 fw-bold">₺@kitap.Price.ToString("N2")</span>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-box me-1"></i>@kitap.Stock adet
                                    </small>
                                </div>
                                <div class="row g-2">
                                    <div class="col-4">
                                        <a href="@Url.Action("Details", "kitaps", new { id = kitap.Id })" 
                                           class="btn btn-outline-primary btn-sm w-100" 
                                           title="Detayları Görüntüle">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                    <div class="col-8">
                                        <form method="post" action="@Url.Action("AddToCart", "kitaps")" class="w-100">
                                            <input type="hidden" name="kitapId" value="@kitap.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100" 
                                                    @(kitap.Stock == 0 ? "disabled" : "")
                                                    title="@(kitap.Stock == 0 ? "Stokta Yok" : "Sepete Ekle")">
                                                <i class="fas fa-cart-plus me-1"></i>
                                                @(kitap.Stock == 0 ? "Stokta Yok" : "Sepete Ekle")
                                            </button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                            <i class="fas fa-search fa-3x text-muted"></i>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-3">Aradığınız kitap bulunamadı</h4>
                    <p class="text-muted mb-4">Lütfen arama kriterlerinizi değiştirerek tekrar deneyin veya tüm kitapları görüntüleyin.</p>
                    <div class="d-grid gap-2 d-md-block">
                        <a href="@Url.Action("Index", "kitaps")" class="btn btn-primary">
                            <i class="fas fa-kitap me-2"></i>Tüm Kitaplar
                        </a>
                        <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-primary">
                            <i class="fas fa-layer-group me-2"></i>Kategoriler
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
.bg-gradient-primary {
    background: var(--gradient-purple) !important;
}

.kitap-description {
    min-height: 60px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
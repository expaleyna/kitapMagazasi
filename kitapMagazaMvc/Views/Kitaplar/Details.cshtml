@{
    Layout = "_Layout";
}

@model kitapMagazaMvc.Models.KitapDto

<div class="container my-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <img src="@(Model.ImageUrl ?? "/images/no-image.jpg")" 
                     class="card-img-top" 
                     alt="@Model.Title"
                     style="height: 400px; object-fit: cover;"
                     onerror="this.src='/images/no-image.jpg'">
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Home")">Anasayfa</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "kitaps")">Kitaplar</a>
                            </li>
                            <li class="breadcrumb-item active">@Model.Title</li>
                        </ol>
                    </nav>
                    
                    <h1 class="h3 mb-2">@Model.Title</h1>
                    <p class="text-muted mb-3">
                        <i class="fas fa-user me-1"></i>@Model.Author
                    </p>
                    
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <span class="badge bg-primary">@Model.CategoryName</span>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>@Model.CreatedDate.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <h6>Açıklama</h6>
                        <p class="text-muted">@Model.Description</p>
                    }
                    
                    <hr>
                    
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4 class="text-primary mb-2">₺@Model.Price.ToString("N2")</h4>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-box me-1"></i>
                                Stok: @Model.Stock adet
                            </p>
                        </div>
                        <div class="col-md-6">
                            @if (Model.Stock > 0)
                            {
                                <form method="post" action="@Url.Action("AddToCart", "kitaps")" class="mb-2">
                                    <div class="input-group mb-2">
                                        <span class="input-group-text">Adet</span>
                                        <input type="number" class="form-control" name="quantity" 
                                               value="1" min="1" max="@Model.Stock">
                                        <input type="hidden" name="kitapId" value="@Model.Id" />
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 mb-2">
                                        <i class="fas fa-cart-plus me-2"></i>Sepete Ekle
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                                
                                <form method="post" action="@Url.Action("Add", "Favorites")">
                                    <input type="hidden" name="userId" value="2" />
                                    <input type="hidden" name="kitapId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        <i class="fas fa-heart me-2"></i>Favorilere Ekle
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="fas fa-times me-2"></i>Stokta Yok
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="text-center">
                <a href="@Url.Action("Index", "kitaps")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Kitaplara Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
